    <title>Ryad</title>
  </head>
  <body>
    <%- include ("./partials/navbar.ejs") %>
      <main>
          <section class="AddRyadSection"> <!-- Admin Section  -->
           <h3 style="text-align: center;color: white; margin-top: 40px;">You can add new available Ryads below</h3>
            <div class="booking-form">
            <form action="/Admin" name="addryad" method="POST" enctype="multipart/form-data">
                <div  class="row">
                <div  class="col-sm-6">
                    <div class="form-group">
                    <span class="form-label">Ryad Name</span>
                    <input class="form-control" id="ryadName" name="name" type="text">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <span class="form-label">Ryad City</span>
                        <input class="form-control" id="ryadCity" name="city" type="text">
                    </div>
                </div>
                </div>
                    <div  class="row">
                        <div  class="col-sm-6">
                            <div  class="form-group">
                                <span class="form-label">The Price in MAD</span>
                                <input class="form-control" id="ryadPrice" name="price" type="number">
                            </div>
                        </div>
                        <div  class="col-sm-6">
                            <div  class="form-group">
                                <span  class="form-label">Available Rooms</span>
                                <input class="form-control" id="ryadRooms" name="rooms" type="number" >
                            </div>
                        </div>
                    </div>
                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">
                        <span  class="form-label">The Address</span>
                        <input class="form-control" id="ryadAddress" name="address" type="text" >
                    </div>
                  </div>
                  <div class="col-sm-6">
                      <div class="form-group">
                        <span class="form-label">File</span>
                        <input class="form-control" id="ryadImage" accept="image/*" name="img"  type="file">
                      </div>
                  </div>
                </div>

                <div class="row">
                <div class="col-sm-6">
                <div class="form-btn">
                  <button type="submit" class="submit-btn">Add Ryad</button>
                </div>
                </div>
                <div class="col-sm-6">
                <div class="form-group">
                    <button onclick="showTable()" class="submit-btn" id="allryads" type="button">Get the list of all ryads</button>
                </div>
                
                </div>
            </div>
            </form>
           </section>
           
      </main>
      <section style="display: none;" id="tablesection">
        <h3 style="text-align: center;color: white; margin-top: 40px;">These are the current available Ryads</h3>
        <div style="text-align: center; color: white;">
          <p>You can update a ryad by clicking the update button and selecting the row <br></p>
          <p>After Editing hit enter and the changes will be saved</p>
        </div>
         <table  id="miyazaki">
            <thead>
            <tr>
            <th style="display:none;">ID</th>
              <th>Ryad Name</th>
              <th>City</th>
              <th>Rooms</th>
              <th>At</th>
              <th>Price</th>
              <th>Action</th>
            </tr>
            </thead>
            <tbody id="target">
            </tbody>
        </table>
    
      </section> 
