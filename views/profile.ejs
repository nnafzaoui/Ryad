<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" type="text/css" href="../public/css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=PT+Sans+Narrow&family=Roboto+Condensed&family=Sora&display=swap" rel="stylesheet">
    <link rel="icon" href="public/img/favicon-96x96.png">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    
    <title>Ryad</title>
  </head>
  <body>
    <%- include ("./partials/navbar.ejs") %>
      <main>
        <% if(user.name != "Admin") {%>
        <section class="profileBackground">
          <div>
            
                
              <div  class="profiles">
                        <div  class="profile">
                          <div class="profileInfo">
                          <i class="fas fa-id-card fa-5x"></i>
                          <h3>Your Profile</h3>
                          <p> Your Name: <span style="font-size: 14px;"> <%= user.name%></span></p>
                          <p> Your Email: <span style="font-size: 14px;"><%= user.email%></span></p>
                        </div>
                          <div>
                            <% if ( reserv.length > 0) {%>
                            <div>
                              <% for (var i = 0; i < reserv.length; i++) {%>
                              <div>
                                <div style=" padding-bottom: 30px;" class="cards">
                                  <div style="border: white; width: 500px;" id="cards2" class="card">
                                  <div class="cardImgDiv">
                                    <img style="width: 200px;height: 200px;" src=" <%= reserv[i].img%>">
                                  </div>
                                  <div>
                                  <div class="cardData">
                                  <h3>Ryad Name: <span style="font-weight: 400;"><%= reserv[i].Sryadname %> </span> </h3>
                                  <h3>City: <span style="font-weight: 400;"><%= reserv[i].Sryadcity %> </span> </h3>
                                  <h3>Price: <span style="font-weight: 400;"><%= reserv[i].Sprice %> </span></h3>
                                  <h3>Your rooms: <span style="font-weight: 400;"><%= reserv[i].Srooms %> </span></h3>
                                  </div>
                                  </div>
                                  
                                  </div>
                              </div>
                              </div>
                              <% } %>
                            <% } else {%>
                              <div>
                                <p>You have no reservations yet <br> Go check our Ryads by Heading to the home page <br>look for a ryad in the search bar by searching <br> for city</p>
                              </div>
                              <% }%>
                            </div>
                          </div>
                          
                        </div>
                        
              </div>
          </section>
          <%} else {%>
          <section> <!-- Admin Section  -->
            <div>
              <div  class="profiles">
                        <div  class="profile">
                          <div class="profileInfo">
                          <i class="fas fa-id-card fa-5x"></i>
                          <h3>Your Profile</h3>
                          <p> Your Name: <span style="font-size: 14px;"> <%= user.name%></span></p>
                          <p> Your Email: <span style="font-size: 14px;"><%= user.email%></span></p>
                          </div>
                          <h5>Actions</h5>
                          <div class="flexbox">
                            <a style="text-decoration: none;" href="/Admin">
                            <div>
                              <i class="fas fa-users-cog fa-5x"></i><br>
                              <span>Admin Tools</span>
                            </div>
                            </a>
                            <a style="text-decoration: none;" href="/reservations">
                              <div>
                              <i class="fas fa-bookmark fa-5x"></i><br>
                              <span>Reservarions</span>
                            </div>
                          </a>
                          </div>
                        </div>
              </div>                      
            </div>
          </section>
          <%}%>
      </main>
      <footer class="footer">
        <div>
          <div class="logorights">
            <img class="footerlogo" src="../public/img/RYAD& Co..png">
            <div class="rights">Â© 2020 Ryad All rights reserved.</div>
          </div>
        </div>
        <div>
          Location: Safi,Morocco<br>
          Email: nafzaouinourdine@gmail.com
        </div>
        <div class="icons" style="color: white;">
          Social media:
          <i class="fab fa-facebook-square"></i>
          <i class="fab fa-twitter-square"></i>

        </div>
      </footer>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="typeahead.min.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://kit.fontawesome.com/21917d46d7.js" crossorigin="anonymous"></script>
  </body>
</html>