    <title>Ryad</title>
  </head>
  <body>
    <%- include ("./partials/navbar.ejs") %>
    <% if (searchResult.length > 0 ) { %>

    <div class="searchResult">   
        <div>
            <h3 style="text-align: center;">Available in <%= term %></h3>
            <% for (var i = 0; i < searchResult.length; i++) { %>
                <form action="/search/booking" method="POST">
                    <div  class="cards">
                        <div id="cards2" class="card">
                        <div class="cardImgDiv">
                        <img style="width: 250px;height: 300px;" src="/<%= searchResult[i].img%>">
                        </div>
                        <div>
                        <div class="cardData">
                        <h3>Name: <%= searchResult[i].name%></h3>
                        <h3>City: <%= searchResult[i].city %></h3>
                        <h3>Price: MAD <%= searchResult[i].price %></h3>
                        <h3>Available rooms: <%= searchResult[i].rooms %></h3>
                        <h3>Address: <%= searchResult[i].address %></h3>
                        <input type="hidden" value="<%= searchResult[i].ryadid %>" name="Rid">
                        </div>
                        </div>
                        <div class="cardButtonDiv">
                    <% if(isLoggedIn) {%>
                        <div class="cardButton">
                         <button id="resultButton" type="submit">Book</button>
                        </div>
                    <%} else {%>
                        <a id="resultButton" href="/login"></a>
                    <% } %>
                        </div>
                        </div>
                    </div>
              </form>
              <% } %>
            </div>
            <% } else {%>
              <%- include ("./partials/noresult.ejs") %>

            <% }%>
                
   
    <footer class="footer">
        <div>
          <div class="logorights">
            <img class="footerlogo" src="../public/img/RYAD& Co..png">
